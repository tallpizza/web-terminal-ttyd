# Web Terminal Environment Configuration
# Copy this file to .env and customize for your environment

# Node Environment (development, production)
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=/app/data/sessions.db

# GoTTY Configuration
GOTTY_BINARY_PATH=/usr/local/bin/gotty
GOTTY_START_PORT=8081
MAX_SESSIONS=20

# Security
SESSION_SECRET=change-me-in-production-use-a-long-random-string
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Cleanup Service
CLEANUP_INTERVAL=3600000
STALE_SESSION_HOURS=24
HISTORY_RETENTION_DAYS=7

# Optional: SSH Key Path (for mounting in Docker)
# SSH_KEY_PATH=~/.ssh

# Optional: Custom SSL certificates for production
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: External URL for production
# EXTERNAL_URL=https://terminal.example.com

# Optional: Authentication (if implementing auth)
# AUTH_ENABLED=false
# AUTH_METHOD=basic
# AUTH_USERNAME=admin
# AUTH_PASSWORD=changeme

# Optional: Resource Limits
# MAX_CPU_PER_SESSION=0.5
# MAX_MEMORY_PER_SESSION=512M
# MAX_SESSION_DURATION=86400000

# Optional: Telemetry
# TELEMETRY_ENABLED=false
# TELEMETRY_ENDPOINT=https://telemetry.example.com